@page "{Id:guid}"
@using EventRegistrationApp.Localization
@using EventRegistrationApp.Web.Pages.Events
@using Microsoft.Extensions.Localization
@model DetailsModel
@inject IStringLocalizer<EventRegistrationAppResource> L
@{
}
<abp-card>
    <abp-card-header>
        <h2>@L["EventDetails"]</h2>
    </abp-card-header>
    <abp-card-body>
        <input type="hidden" id="Event_Id" value="@Model.Event.Id" />
        <abp-input asp-for="Event.NameEn" readonly="true" />
        <abp-input asp-for="Event.NameAr" readonly="true" />
        <abp-input asp-for="Event.Capacity" readonly="true" />
        <abp-input asp-for="Event.IsOnline" readonly="true" />
        <abp-input asp-for="Event.StartDate" readonly="true" />
        <abp-input asp-for="Event.EndDate" readonly="true" />
        <abp-input asp-for="Event.Link" readonly="true" />
        <abp-input asp-for="Event.Location" readonly="true" />
        <abp-input asp-for="Event.IsActive" readonly="true" />
    </abp-card-body>
    <abp-card-footer>
        @if (!Model.IsUserRegistered)
        {
            <button id="RegisterButton" class=" btn-success register">@L["Register"]</button>
        }
        else
        {
            <button id="CancelRegistrationButton" class="btn-danger cancel">@L["CancelRegistration"]</button>
        }
        @* <abp-button id="RegisterButton" text="@L["Register"]" /> *@
        @* <abp-button id="CancelRegistrationButton" text="@L["CancelRegistration"]" /> *@
    </abp-card-footer>
</abp-card>

@section scripts
{
    <abp-script src="/Pages/Events/Details.js" />
}