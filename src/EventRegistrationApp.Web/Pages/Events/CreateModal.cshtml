@page
@using EventRegistrationApp.Localization
@using EventRegistrationApp.Web.Pages.Events
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<EventRegistrationAppResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Event" asp-page="/Events/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewEvent"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>